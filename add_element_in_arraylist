import java.util.*;
public class addnewelement_arraylist {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
   ArrayList <Integer>a=new ArrayList <Integer>(10);
   Scanner sc=new Scanner(System.in);
   int n=sc.nextInt();
   
   for(int i=0;i<n;i++)
   {
	   a.add(sc.nextInt());
   }
   System.out.print("size before adding:"+a.size());

   a.add(100);
   
   System.out.println("size after adding:"+a.size());
	}

}
